#!/bin/bash

cd $(dirname $0)/..

docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml up -d firefox
sleep 2

./bin/phpcli ./bin/codecept-wrapper "$@"
RET=$?

docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml stop firefox
docker-compose -f docker/docker-compose.yml -f docker/docker-compose.browsers.yml rm -f -v firefox

exit $RET
