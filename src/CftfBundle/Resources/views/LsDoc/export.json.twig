{% block body %}
{
    "uri": {{ lsDoc.uri|local_uri |json_encode |raw }},
    "creator": {{ lsDoc.creator |json_encode |raw }},
    "title": {{ lsDoc.title |json_encode |raw }},
    "identifier": {{ lsDoc.identifier |json_encode |raw }},
    "officialUri": {{ lsDoc.officialUri|local_uri |json_encode |raw }},
    "publisher": {{ lsDoc.publisher |json_encode |raw }},
    "version": {{ lsDoc.version |json_encode |raw }},
    "description": {{ lsDoc.description |json_encode |raw }},
    "subject": {{ lsDoc.subject |json_encode |raw }},
    "subjectUri": {{ lsDoc.subjectUri|local_uri |json_encode |raw }},
    "language": {{ lsDoc.language |json_encode |raw }},
    "adoptionStatus": {{ lsDoc.adoptionStatus |json_encode |raw }},
    "statusStart": {{ lsDoc.statusStart |json_encode |raw }},
    "statusEnd": {{ lsDoc.statusEnd |json_encode |raw }},
    "hasTopLSItems": [
        {% for itemId in lsDoc.topLSItemIds %}
            {% set item = items[itemId] %}
            {% if not loop.first %},{% endif %}
            {# render_esi(path('lsitem_export', { 'id': item.id })) #}
            {# item.uri|local_uri |json_encode |raw #}
            {% include 'CftfBundle:LsDoc:export_child.json.twig' with { 'lsItem':item, 'lsDoc':lsDoc, 'items':items} %}
        {% endfor %}
    ],
    "note": {{ lsDoc.note |json_encode |raw }}
}
{% endblock %}

