{% block body %}
    {
        "CFDocumentURI": {{ lsAssociation.lsDocUri|local_uri |json_encode |raw }},
        "identifier": {{ lsAssociation.identifier |json_encode |raw }},
        "uri": {{ lsAssociation.uri|local_uri |json_encode |raw }},
        {# "lsDocIdentifier": {{ lsAssociation.lsDocIdentifier |json_encode |raw }}, #}
        {% if lsAssociation.groupName is not null %}
            "CFAssociationGroupingIdentifier": {{ lsAssociation.identifier |json_encode |raw }},
            "CFAssociationGroupingURI": {{ lsAssociation.groupUri |json_encode |raw }},
        {% endif %}
        "originNodeIdentifier": {{ lsAssociation.originNodeIdentifier |json_encode |raw }},
        "originNodeURI": {{ lsAssociation.originNodeUri|local_uri |json_encode |raw }},
        "associationType": {{ (lsAssociation.type|slice(0,1)|lower~lsAssociation.type|slice(1))|replace({' ': ''}) |json_encode |raw }},
        "destinationNodeIdentifier": {{ lsAssociation.destinationNodeIdentifier |json_encode |raw }},
        "destinationNodeURI": {{ lsAssociation.destinationNodeUri|local_uri |json_encode |raw }},
        "lastChangeDateTime": {{ lsAssociation.updatedAt |date('c') |json_encode |raw }}
    }
{% endblock %}
